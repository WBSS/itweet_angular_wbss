        <splash src="assets/rhb/splash_ios/Default-667h.png" width="750" height="1334"/>
        <splash src="assets/rhb/splash_ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="assets/rhb/splash_ios/Default-Landscape-736h.png" width="2208" height="1242"/>

