<?xml version='1.0' encoding='utf-8'?>
<widget id="<%-appPackage%>" version="0.7.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name><%-appName%></name>
    <description>
    </description>
    <author email="info@smoca.ch" href="https://www.smoca.ch">
        smoca AG
    </author>
    <content src="index.html" />
    <access origin="*" />
     <access origin="cdvfile://*" />
    <preference name="keepRunning" value="false" />
    <preference name="StatusBarBackgroundColor" value="#303F9F" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="UIWebViewBounce" value="false" />
    <preference name="BackupWebStorage" value="local"/>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />

    <platform name="android">

        <icon src="assets/rhb/icon_android/icon-port-hdpi.png" density="hdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-ldpi.png" density="ldpi"/>
        <icon src="assets/rhb/icon_android/icon-port-mdpi.png" density="mdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xhdpi.png" density="xhdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xxhdpi.png" density="xxhdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xxxhdpi.png" density="xxxhdpi"/>

        <splash src="assets/rhb/splash_android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="assets/rhb/splash_android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>

    </platform>

    <platform name="ios">

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="assets/rhb/icon_ios/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="assets/rhb/icon_ios/icon-60.png" width="60" height="60" />
        <icon src="assets/rhb/icon_ios/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="assets/rhb/icon_ios/icon-76.png" width="76" height="76" />
        <icon src="assets/rhb/icon_ios/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="assets/rhb/icon_ios/icon-40.png" width="40" height="40" />
        <icon src="assets/rhb/icon_ios/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="assets/rhb/icon_ios/icon.png" width="57" height="57" />
        <icon src="assets/rhb/icon_ios/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="assets/rhb/icon_ios/icon-72.png" width="72" height="72" />
        <icon src="assets/rhb/icon_ios/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="assets/rhb/icon_ios/icon-small.png" width="29" height="29" />
        <icon src="assets/rhb/icon_ios/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="assets/rhb/icon_ios/icon-50.png" width="50" height="50" />
        <icon src="assets/rhb/icon_ios/icon-50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="assets/rhb/splash_ios/Default~iphone.png" width="320" height="480"/>
        <splash src="assets/rhb/splash_ios/Default@2x~iphone.png" width="640" height="960"/>
